<CustomDropDown>:
    canvas.before:
        Color:
            rgba: hex('#FFFFFF')
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        text: 'Productos'
        size_hint_y: None
        height: 44
        on_release: root.vista(self.text)
    Button:
        text: 'Usuarios'
        size_hint_y: None
        height: 44
        on_release: root.vista(self.text)
