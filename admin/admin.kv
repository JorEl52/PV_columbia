#:import hex kivy.utils.get_color_from_hex

<BotonOscuro@Button>:
    backgroud_normal: ''
    background_color: hex('#131314')

<LabelOscuro@Label>:
    canvas.before:
        Color:
            rgba: hex('#131314')
        Rectangle:
            size: self.size
            pos: self.pos

<AdminRV>:
    SelectableRecycleBoxLayout:
        default_size: None, dp(36)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False

<SelectableProductoLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: hex('#BE1C1C') if self.selected else hex('#F0F0F0')
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: _hashtag
        size_hint_x: .05
        color: (0,0,0,1)
    Label:
        id: _codigo
        size_hint_x: .15
        color: (0,0,0,1)
    Label:
        id: _articulo
        size_hint_x: .45
        color: (0,0,0,1)
    Label:
        id: _talla
        size_hint_x: .1
        color: (0,0,0,1)
    Label:
        id: _cantidad
        size_hint_x: .125
        color: (0,0,0,1)
    Label:
        id: _precio
        size_hint_x: .125
        color: (0,0,0,1)

