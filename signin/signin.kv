#:import hex kivy.utils.get_color_from_hex

<SigninWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: hex('#253392')
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: .05
    BoxLayout:
        canvas.before:
            Color:
                rgba: hex('#F2F2F2')
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: .9
        Label:
            size_hint_x: .3
        BoxLayout:
            size_hint_x: .4
            orientation: 'vertical'
            Label:
                size_hint_y: .15
                text: 'Bienvenido'
                font_name: 'playwrite_light'
                font_size: 30
                color: (0,0,0,1)
            Image:
                source: 'signin/logo_columbia.png'
                allow_stretch: True
                size_hint_y: .25
            Label:
                text: 'Discovering Knowledge'
                font_name: 'birthstone'
                font_size: 30
                size_hint_y: .05
                color: (0,0,0,1)
            Label:
                id: signin_notificacion
                size_hint_y: .05
                color: (1,.2,.2,1)
            TextInput:
                id: username
                size_hint_y: .1
                hint_text: 'Nombre de usuario'
                multiline: False
                write_tab: False
                on_text_validate: root.verificar_usuario(self.text, password.text)
            TextInput:
                id: password
                size_hint_y: .1
                hint_text: 'Contrase√±a'
                multiline: False
                write_tab: False
                password: True
                on_text_validate: root.verificar_usuario(username.text, self.text)
            Button:
                size_hint_y: .1
                backgroud_normal: ''
                background_color: hex('#393939')
                text: 'Ingresar'
                on_release: root.verificar_usuario(username.text, password.text)
            Button:
                id: add_admin_button
                background_color: hex('#393939')
                text: 'Agregar Usuario Administrador'
                size_hint_y: .1
                opacity: 0
                disabled: True
                on_release: root.agregar_admin()
            Label:
                size_hint_y: .2
        Label:
            size_hint_x: .3
    BoxLayout:
        size_hint_y: .05
